{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/API-log-.txt",
          "rollingInterval": "Day",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*",

  "Configurations": {
    "TestMode": true,
    "ConnectionStrings": {
      "DbRoute": ""
    },
    "UserFolder": {
      "UserPath": "./Data/User.json",
      "UserGroupPath": "./Data/UserGroups.json",
      "UserPermissionPath": "./Data/UserPermissions.json"
    },
    "ApiConfig": {
      "ApiKey": "",
      "ApiURL": ""
    },
    "Rodeo": {
      "RodeoSector": "",
      "HostName": ""
    },
    "TimeLoop": {
      "TimeLoopInterval": 5,
      "TimeLoopIntervalUnit": "Minutes"
    },
    "Jwt": {
      "Key": "$Janus_Automation_BH_BR_New_Proyecto_Security_Key_For_This_Project$",
      "Issuer": "WebApi",
      "Audience": "LevelTwo",
      "ExpirationTime": 24,
      "ExpirationTimeUnit": "Minutes" 
      // Milliseconds, Seconds, Minutes, Hours, Days
    }
  }
}
